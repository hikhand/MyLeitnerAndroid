<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>


    <!-- START style TextView -->
    <style name="TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/overal_text_color_dark</item>
        <item name="multiLine">false</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="TextView.small.smaller" parent="TextView">
        <item name="android:textSize">@dimen/font_small_v</item>
    </style>

    <style name="TextView.small" parent="TextView">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextView.small.larger" parent="TextView">
        <item name="android:textSize">@dimen/font_small_x</item>
    </style>

    <style name="TextView.medium" parent="TextView">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="TextView.medium.larger" parent="TextView">
        <item name="android:textSize">@dimen/font_medium_x</item>
    </style>

    <style name="TextView.large" parent="TextView">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="TextView.small.multiline" parent="TextView">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="multiLine">true</item>
    </style>

    <style name="TextView.small.larger.multiline" parent="TextView">
        <item name="android:textSize">@dimen/font_small_x</item>
        <item name="multiLine">true</item>
    </style>

    <style name="TextView.medium.multiline" parent="TextView">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="multiLine">true</item>
    </style>

    <style name="TextView.large.multiline" parent="TextView">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="multiLine">true</item>
    </style>

    <style name="textViewBoxTitle" parent="TextView.large">
        <item name="android:layout_margin">@dimen/small_vvv</item>
        <item name="android:padding">@dimen/small</item>
    </style>
    <!-- END style TextView -->




    <!-- START styles EditText -->
    <style name="EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/overal_text_color_dark</item>
        <item name="multiLine">false</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="EditText.small" parent="EditText">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="EditText.medium" parent="EditText">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="EditText.medium.large" parent="EditText">
        <item name="android:textSize">@dimen/font_medium_x</item>
    </style>

    <style name="EditText.large" parent="EditText">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="EditText.small.multiline" parent="EditText">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="multiLine">true</item>
    </style>

    <style name="EditText.medium.multiline" parent="EditText">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="multiLine">true</item>
    </style>

    <style name="EditText.medium.large.multiline" parent="EditText">
        <item name="android:textSize">@dimen/font_medium_x</item>
        <item name="multiLine">true</item>
    </style>

    <style name="EditText.large.multiline" parent="EditText">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="multiLine">true</item>
    </style>

    <style name="editTextSetting" parent="EditText.large">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/small_v</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/small_v</item>
    </style>
    <!-- END styles EditText -->




    <!-- START DIALOG -->
    <style name="dialog_style" parent="@android:style/Theme.Translucent.NoTitleBar" >
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>
    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/alpha_to_visible</item>
        <item name="android:windowExitAnimation">@anim/alpha_to_invisible</item>
    </style>


    <style name="dialog_transparent" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/style_dialog_transparent</item>
    </style>
    <style name="style_dialog_transparent">
        <item name="android:windowEnterAnimation">@anim/to_visible</item>
        <item name="android:windowExitAnimation">@anim/to_invisible</item>
    </style>
    <!-- END DIALOG -->

</resources>
